LoadPlugin bind
<Plugin "bind">
  URL             "<%= @url %>"
  OpCodes         <%= @opcodes %>
  QTypes          <%= @qtypes %>

  ServerStats     <%= @serverstats %>
  ZoneMaintStats  <%= @zonemaintstats %>
  ResolverStats   <%= @resolverstats %>
  MemoryStats     <%= @memorystats %>

  <View "_default">
    QTypes        true
    ResolverStats true
    CacheRRSets   true
<% if @zones %>
  <% @zones.each do |zone| %>
    Zone "<%= zone %>"
  <% end %>
<% end%>
  </View>
</Plugin>
